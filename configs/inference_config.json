{
    "EXPERIMENTS":
    {
        "PROJECT_NAME": "face_attribute"
    },

    "DATA":
    {
        "DATASET_NAME": "small_celeb_A",
        "INPUT_SHAPE": [224, 224, 3],
        "BATCH_SIZE": 240,
        "NUM_WORKERS": 4,
        // Transform for X/ Variables
        "TRANSFORM":
        {
            "NAME_LIST": ["Resize", "PILToTensor", "ToDtype"],
            "ARGS":
            {
                "0":
                {
                    // Upscaling to fit model input
                    "size": [224, 224],
                    "interpolation": "BICUBIC",
                    "antialias": true
                },

                "1": {},  // Not need paras

                "2":
                {
                    "dtype": "float32",
                    // normalize image from range [0, 255] into range [0, 1]
                    "scale": true
                }
            }
        }
    },

     "METRICS":
     {
         // Metric not use threshold must be relegated after the ones using threshold in argument
         // Ref: torcheval.metrics
         "NAME_LIST": ["BinaryPrecision", "BinaryRecall", "BinaryConfusionMatrix", "BinaryPrecisionRecallCurve"],
         "NOT_USING_THRESHOLD_METRICS": 1,
         "ARGS":
         {
             "0":
             {
                 "threshold": 0.5
             },

             "1":
             {
                 "threshold": 0.5
             },

             "2":
             {
                 "threshold": 0.5
             },

             "3":
             {
             }
         }
     },

    "CHECKPOINT":
    {
        "NAME": "best_checkpoint.pt"
    },

    "MODEL":
    {
        "BASE": "resnet",
        "NAME": "resnet18",
        "PRETRAINED": false,
        "ARGS":
        {
//            "dropout": 0.5,
            "num_classes": 1
        }
    },

    "MISC":
    {
        "SEED": 12345,
        "CUDA": true
    }
}