{
    //
    "EXPERIMENTS":
    {
        "PROJECT_NAME": "face_attribute"
    },

    "DATA":
    {
        "DATASET_NAME": "celeb_A",
        "INPUT_SHAPE": [224, 224, 3],
        "TRAIN_SIZE": 0.9,
        "BATCH_SIZE": 96,
        "NUM_WORKERS": 4
    },

    "CHECKPOINT":
    {
        "SAVE": true,
        "LOAD": true,
        "SAVE_ALL": false,
        "RESUME_NAME": "epoch_1.pt"
    },

    "EPOCH":
    {
        "START": 1,
        "EPOCHS": 1
    },

    "METRICS":
    {
        "NAME_LIST": ["MulticlassAccuracy", "MulticlassF1Score"],
        "ARGS":
        {
            "0":
            {
                "average": "micro",
                "num_classes": null,
                "k": 1
            },

            "1":
            {
                "average": "micro",
                "num_classes": 2
            }
        }
    },

    "SOLVER":
    {
        "MODEL":
        {
            "BASE": "vgg",
            "NAME": "vgg19",
            "PRETRAINED": false,
            "ARGS":
            {
                "dropout": 0.5,
                "num_classes": 2
            }
        },

        "OPTIMIZER":
        {
            "NAME": "Adam",
            "ARGS":
            {
                "lr": 1e-7,
                "amsgrad": true
            }
        },

        "LOSS":
        {
            "NAME": "CrossEntropyLoss",
            "ARGS":
            {
                "reduction": "mean",
                "label_smoothing": 0.0
            }
        },

        "EARLY_STOPPING":
        {
            "PATIENCE": 5,
            "MIN_DELTA": 0
        }
    },

    "MISC":
    {
        "SEED": 12345,
        "APPLY_EARLY_STOPPING": true,
        "CUDA": true
    }
}