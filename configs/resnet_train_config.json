{
    "EXPERIMENTS":
    {
        "PROJECT_NAME": "face_attribute"
    },

    "DATA":
    {
        "DATASET_NAME": "small_celeb_A",
        "INPUT_SHAPE": [224, 224, 3],
        "TRAIN_SIZE": 0.9,
        "BATCH_SIZE": 344,
        "NUM_WORKERS": 4,
                // Transform for X/ Variables
        "TRANSFORM":
        {
            "NAME_LIST": ["Resize", "Resize", "GaussianBlur", "PILToTensor", "ToDtype"],
            "ARGS":
            {
                "0":
                {
                    // Downsampling
                    // H = ceil(178 x 20%), W = ceil(218 x 20%)
                    "size": [36, 44],
                    "interpolation": "NEAREST",
                    "antialias": true
                },

                "1":
                {
                    // Upsampling to fit model input
                    "size": [224, 224],
                    "interpolation": "BICUBIC",
                    "antialias": true
                },

                "2":
                {
                    "kernel_size": 5
                },

                "3": {},                  // Not need paras

                "4":
                {
                    "dtype": "float32",
                    // normalize image from range [0, 255] into range [0, 1]
                    "scale": true
                }
            }
        }
    },

    "CHECKPOINT":
    {
        "SAVE": false,
        "LOAD": false,
        "SAVE_ALL": false,
        "RESUME_NAME": "epoch_1.pt"
    },

    "EPOCH":
    {
        "START": 1,
        "EPOCHS": 1
    },

    "METRICS":
    {
        "NAME_LIST": ["BinaryAccuracy", "BinaryF1Score"],
        "ARGS":
        {
            "0":
            {
               "threshold": 0.5
            },

            "1":
            {
               "threshold": 0.5
            }
        }
    },

    "SOLVER":
    // https://catalog.ngc.nvidia.com/orgs/nvidia/resources/resnet_50_v1_5_for_pytorch
    {
        "MODEL":
        {
            "BASE": "resnet",
            "NAME": "resnet18",
            "PRETRAINED": false,
            "ARGS":
            {
                "num_classes": 1
            }
        },

        "OPTIMIZER":
        {
            "NAME": "Adam",
            "ARGS":
            {
                "lr": 1e-6,
                 "weight_decay": 3.0517578125e-05, // 1/32768
                "amsgrad": true
            }
        },


        "LR_SCHEDULER":
        {
            "NAME": "CosineAnnealingWarmRestarts",
            "ARGS":
            {
                "T_0": 100,
                "T_mult": 3,
                "eta_min": 1e-8
            }
        },

        "LOSS":
        {
            "NAME": "BCELoss",
            "ARGS":
            {
                "reduction": "mean"
            }
        },

        "EARLY_STOPPING":
        {
            "PATIENCE": 5,
            "MIN_DELTA": 0
        }
    },

    "MISC":
    {
        "SEED": 12345,
        "APPLY_EARLY_STOPPING": true,
        "CUDA": true
    }
}