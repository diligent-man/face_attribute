{
    "EXPERIMENTS":
    {
        "PROJECT_NAME": "face_attribute"
    },

    "DATA":
    {
        "DATASET_NAME": "celeb_A",
        "INPUT_SHAPE": [224, 224, 3],
        "TRAIN_SIZE": 0.9,
        "BATCH_SIZE": 96,
        "NUM_WORKERS": 8
    },

    "CHECKPOINT":
    {
        "SAVE": true,
        "LOAD": false,
        "SAVE_ALL": false,
        "RESUME_NAME": "epoch_1.pt"
    },

    "EPOCH":
    {
        "START": 1,
        "EPOCHS": 10
    },

    "METRICS":
    {
        "NAME_LIST": ["MulticlassAccuracy", "MulticlassF1Score"],
        "ARGS":
        {
            "0":
            {
                "average": "micro",
                "num_classes": null,
                "k": 1
            },

            "1":
            {
                "average": "micro",
                "num_classes": 2
            }
        }
    },

    "SOLVER":
    // https://catalog.ngc.nvidia.com/orgs/nvidia/resources/resnet_50_v1_5_for_pytorch
    {
        "MODEL":
        {
            "BASE": "resnet",
            "NAME": "resnet18",
            "PRETRAINED": false,
            "ARGS":
            {
                "num_classes": 2
            }
        },

        "OPTIMIZER":
        {
            "NAME": "SGD",
            "ARGS":
            {
                "lr": 1e-4,
                "momentum": 0.875,
                "weight_decay": 3.0517578125e-05, // 1/32768
                "nesterov": true
            }
        },

        "LOSS":
        {
            "NAME": "CrossEntropyLoss",
            "ARGS":
            {
                "reduction": "mean",
                "label_smoothing": 1.0
            }
        },

        "EARLY_STOPPING":
        {
            "PATIENCE": 5,
            "MIN_DELTA": 0
        }
    },

    "MISC":
    {
        "SEED": 12345,
        "APPLY_EARLY_STOPPING": true,
        "CUDA": true
    }
}