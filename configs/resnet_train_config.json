{
    "EXPERIMENTS":
    {
        "PROJECT_NAME": "face_attribute"
    },

    "DATA":
    {
        "DATASET_NAME": "celeb_A",
        "INPUT_SHAPE": [224, 224, 3],
        "TRAIN_SIZE": 0.9,
        "BATCH_SIZE": 24,
        "NUM_WORKERS": 1
    },

    "CHECKPOINT":
    {
        "SAVE": true,
        "LOAD": false,
        "SAVE_ALL": false,
        "RESUME_NAME": "epoch_1.pt"
    },

    "EPOCH":
    {
        "START": 1,
        "EPOCHS": 5
    },

    "METRICS":
    {
        "NAME_LIST": ["BinaryAccuracy", "BinaryF1Score"],
        "ARGS":
        {
            "0":
            {
               "threshold": 0.5
            },

            "1":
            {
               "threshold": 0.5
            }
        }
    },

    "SOLVER":
    // https://catalog.ngc.nvidia.com/orgs/nvidia/resources/resnet_50_v1_5_for_pytorch
    {
        "MODEL":
        {
            "BASE": "resnet",
            "NAME": "resnet18",
            "PRETRAINED": false,
            "ARGS":
            {
                "num_classes": 1
            }
        },

        "OPTIMIZER":
        {
            "NAME": "Adam",
            "ARGS":
            {
                "lr": 1e-2,
                "weight_decay": 3.0517578125e-05, // 1/32768
                "amsgrad": true
            }
        },

        "LOSS":
        {
            "NAME": "BCELoss",
            "ARGS":
            {
                "reduction": "mean"
            }
        },

        "EARLY_STOPPING":
        {
            "PATIENCE": 5,
            "MIN_DELTA": 0
        }
    },

    "MISC":
    {
        "SEED": 12345,
        "APPLY_EARLY_STOPPING": true,
        "CUDA": true
    }
}